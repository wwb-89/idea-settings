        WHERE
            t.activity_flag = #{params.flag}
            AND (
                t.create_fid = #{params.fid} OR t1.fid = #{params.fid}
            )
            <!--状态-->
            AND t.is_archived = #{params.archived}
            <choose>
                <when test="params.status != null">
                    AND t.`status` = #{params.status}
                </when>
                <otherwise>
                    AND t.`status` IN ( 1, 2, 3, 4 )
                </otherwise>
            </choose>
            <!--搜索关键字-->
            <if test="params.sw != null and params.sw != ''">
                AND (
                    t.`name` LIKE CONCAT('%', #{params.sw}, '%')
                    OR t.organisers LIKE CONCAT('%', #{params.sw}, '%')
                )
            </if>
            <!--时间-->
            <choose>
                <when test="params.startTime != null and params.startTime != '' and params.endTime != null and params.endTime != ''">
                    AND ((t.start_time BETWEEN #{params.startTime} AND #{params.endTime}) OR (t.end_time between #{params.startTime} AND #{params.endTime}))
                </when>
                <otherwise>
                    <choose>
                        <when test="params.startTime != null and params.startTime != ''">
                            AND t.end_time &gt;= #{params.startTime}
                        </when>
                        <otherwise>
                            <if test="params.endTime != null and params.endTime != ''">
                                AND t.start_time &lt;= #{params.endTime}
                            </if>
                        </otherwise>
                    </choose>
                </otherwise>
            </choose>
        GROUP BY
            t.id
        ORDER BY
            <choose>
                <when test="params.orderField == null or params.orderField == ''">
                    FIELD( t.`status`, 3, 2, 1, 4 ),
                    t.start_time DESC
                </when>
                <otherwise>
                    t.${params.orderField} <choose><when test="params.orderType != null and params.orderType != ''">${params.orderType}</when><otherwise>DESC</otherwise></choose>
