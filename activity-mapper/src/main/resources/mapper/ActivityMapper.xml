    <select id="pageParticipate" resultMap="BaseResultMap">
        SELECT
            <choose>
                <when test="params.marketId != null">
                    <include refid="Base_Market_Column_List"></include>,
                    t4.is_released,
                    t4.status,
                    t4.is_top top
                </when>
                <otherwise>
                    <include refid="Base_Column_List"></include>
                </otherwise>
            </choose>
            ,t3.name activityClassifyName
        FROM
            t_activity t
            <if test="params.marketId == null">
                INNER JOIN t_activity_scope t1 ON t.id = t1.activity_id
                <if test="params.fids != null and params.fids.size() != 0">
                    AND t1.fid IN
                    <foreach collection="params.fids" index="key" item="value" open="(" close=")" separator=",">
                        #{value}
                    </foreach>
                </if>
            </if>
            <!--类型-->
            LEFT JOIN t_classify t3 ON t.activity_classify_id = t3.id
            <if test="params.marketId != null">
                INNER JOIN t_activity_market t4 ON t4.activity_id = t.id
            </if>
            <if test="params.sw != null and params.sw != ''">
                LEFT JOIN t_activity_scope t5 ON t.id = t5.activity_id
            </if>
            <if test="params.tagIds != null and params.tagIds.size() != 0">
                INNER JOIN t_activity_tag t6 ON t.id = t6.activity_id AND t6.tag_id IN
                <foreach collection="params.tagIds" index="key" item="value" open="(" close=")" separator=",">
                    #{value}
                </foreach>
            </if>
        WHERE
            <!--状态-->
            <choose>
                <when test="params.status != null">
                    t.`status` = #{params.status}
                </when>
                <otherwise>
                    <choose>
                        <when test="params.statusList != null and params.statusList.size() != 0">
                            t.`status` IN
                            <foreach collection="params.statusList" index="key" item="value" open="(" close=")" separator=",">
                                #{value}
                            </foreach>
                        </when>
                        <otherwise>
                            <choose>
                                <when test="params.signUpAble">
                                    t.`status` IN ( 2, 3 )
                                </when>
                                <otherwise>
                                    t.`status` IN ( 2, 3, 4 )
                                </otherwise>
                            </choose>
                        </otherwise>
                    </choose>
                </otherwise>
            </choose>
            <choose>
                <when test="params.marketId != null">
                    AND t.market_id = #{params.marketId}
                </when>
                <otherwise>
                    <if test="params.flag != null and params.flag != ''">
                        AND t.activity_flag = #{params.flag}
                    </if>
                </otherwise>
            </choose>
            <!--时间-->
            <choose>
                <when test="(params.minTimeStr != null and params.minTimeStr != '') or (params.maxTimeStr != null and params.maxTimeStr != '')">
                    <choose>
                        <when test="params.minTimeStr != null and params.minTimeStr != '' and params.maxTimeStr != null and params.maxTimeStr != ''">
                            <!--都不为空-->
                            AND t.start_time <![CDATA[<=]]> #{params.maxTimeStr}
                            AND t.end_time >= #{params.minTimeStr}
                        </when>
                        <otherwise>
                            <choose>
                                <when test="params.minTimeStr != null and params.minTimeStr != ''">
                                    AND #{params.minTimeStr} BETWEEN t.start_time AND t.end_time
                                </when>
                                <otherwise>
                                    AND #{params.maxTimeStr} BETWEEN t.start_time AND t.end_time
                                </otherwise>
                            </choose>
                        </otherwise>
                    </choose>
                </when>
                <otherwise>
                    <if test="params.date != null and params.date != ''">
                        AND #{params.date} BETWEEN t.start_date AND t.end_date
                    </if>
                </otherwise>
            </choose>
            <!--分类-->
            <choose>
                <when test="params.activityClassifyId != null">
                    AND t3.id = #{params.activityClassifyId}
                </when>
                <otherwise>
                    <if test="params.activityClassifyName != null and params.activityClassifyName != ''">
                        AND t3.name = #{params.activityClassifyName}
                    </if>
                </otherwise>
            </choose>
            <if test="params.activityType != null and params.activityType != ''">
                AND t.activity_type = #{params.activityType}
            </if>
            <if test="params.sw != null and params.sw != ''">
                AND (
                    t.`name` LIKE CONCAT('%', #{params.sw}, '%')
                    OR t.organisers LIKE CONCAT('%', #{params.sw}, '%')
                    OR t5.name LIKE CONCAT('%', #{params.sw}, '%')
                )
            </if>
            AND t.is_archived = 0
        GROUP BY
            t.id
        ORDER BY
            <trim suffixOverrides=",">
                <if test="params.marketId != null">
                    t4.is_top DESC,
                </if>
                FIELD( t.`status`, 2, 3, 4 ),
                <if test="params.marketId == null and params.topFid != null and (params.areaCode == null or params.areaCode == '')">
                    t1.fid <![CDATA[<>]]> #{params.topFid},
                </if>
                CASE WHEN t.`status` = 2 THEN t.start_time END ASC,
                CASE WHEN t.`status` = 3 OR t.`status` = 4 THEN t.start_time END DESC
            </trim>
    </select>

    <select id="pageFlag" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"></include>
            ,t3.name activityClassifyName
        FROM
            t_activity t
            INNER JOIN t_activity_scope t1 ON t.id = t1.activity_id
            <if test="params.fids != null and params.fids.size() != 0">
                AND t1.fid IN
                <foreach collection="params.fids" index="key" item="value" open="(" close=")" separator=",">
                    #{value}
                </foreach>
            </if>
            <!--类型-->
            LEFT JOIN t_classify t3 ON t.activity_classify_id = t3.id
        WHERE
            <!--状态-->
            <choose>
                <when test="params.status != null">
                    t.`status` = #{params.status}
                </when>
                <otherwise>
                    <choose>
                        <when test="params.statusList != null and params.statusList.size() != 0">
                            t.`status` IN
                            <foreach collection="params.statusList" index="key" item="value" open="(" close=")" separator=",">
                                #{value}
                            </foreach>
                        </when>
                        <otherwise>
                            <choose>
                                <when test="params.signUpAble">
                                    t.`status` IN ( 2, 3 )
                                </when>
                                <otherwise>
                                    t.`status` IN ( 2, 3, 4 )
                                </otherwise>
                            </choose>
                        </otherwise>
                    </choose>
                </otherwise>
            </choose>
            <if test="params.flag != null and params.flag != ''">
                AND t.activity_flag = #{params.flag}
            </if>
            <!--时间-->
            <if test="(params.minTimeStr != null and params.minTimeStr != '') or (params.maxTimeStr != null and params.maxTimeStr != '')">
                <choose>
                    <when test="params.minTimeStr != null and params.minTimeStr != '' and params.maxTimeStr != null and params.maxTimeStr != ''">
                        <!--都不为空-->
                        AND t.start_time <![CDATA[<=]]> #{params.maxTimeStr}
                        AND t.end_time >= #{params.minTimeStr}
                    </when>
                    <otherwise>
                        <choose>
                            <when test="params.minTimeStr != null and params.minTimeStr != ''">
                                AND #{params.minTimeStr} BETWEEN t.start_time AND t.end_time
                            </when>
                            <otherwise>
                                AND #{params.maxTimeStr} BETWEEN t.start_time AND t.end_time
                            </otherwise>
                        </choose>
                    </otherwise>
                </choose>
            </if>
            <!--分类-->
            <choose>
                <when test="params.activityClassifyId != null">
                    AND t3.id = #{params.activityClassifyId}
                </when>
                <otherwise>
                    <if test="params.activityClassifyName != null and params.activityClassifyName != ''">
                        AND t3.name = #{params.activityClassifyName}
                    </if>
                </otherwise>
            </choose>
            <if test="params.activityType != null and params.activityType != ''">
                AND t.activity_type = #{params.activityType}
            </if>
            <if test="params.sw != null and params.sw != ''">
                AND (
                t.`name` LIKE CONCAT('%', #{params.sw}, '%')
                OR t.organisers LIKE CONCAT('%', #{params.sw}, '%')
                )
            </if>
            AND t.is_archived = 0
        GROUP BY
            t.id
        ORDER BY
            FIELD( t.`status`, 2, 3, 4 ),
            <if test="params.marketId == null and params.topFid != null and (params.areaCode == null or params.areaCode == '')">
                t1.fid <![CDATA[<>]]> #{params.topFid},
            </if>
            CASE WHEN t.`status` = 2 THEN t.start_time END ASC,
            CASE WHEN t.`status` = 3 OR t.`status` = 4 THEN t.start_time END DESC
    </select>

    <!-- 活动分类join过滤条件 -->
    <sql id="classifyJoinConditionSql">
        <!--类型-->
        <choose>
            <when test="params.activityClassifyId != null">
                INNER JOIN t_classify t3 ON t.activity_classify_id = t3.id
                AND t3.id = #{params.activityClassifyId}
            </when>
            <otherwise>
                <if test="params.activityClassifyName != null and params.activityClassifyName != ''">
                    INNER JOIN t_classify t3 ON t.activity_classify_id = t3.id
                    AND t3.name = #{params.activityClassifyName}
                </if>
            </otherwise>
        </choose>
    </sql>

    <!-- 活动查询where过滤条件 -->
    <sql id="erdosConditionSql">
        WHERE
            t.`status` IN ( 2, 3, 4 )
            <if test="params.flags != null and params.flags.size() != 0">
                AND t.activity_flag IN
                <foreach collection="params.flags" index="key" item="value" open="(" close=")" separator=",">
                    #{value}
                </foreach>
            </if>
            <if test="params.levelType != null and params.levelType != ''">
                AND t.activity_flag = #{params.levelType}
            </if>
            <if test="params.sw != null and params.sw != ''">
                AND (
                t.`name` LIKE CONCAT('%', #{params.sw}, '%')
                OR t.organisers LIKE CONCAT('%', #{params.sw}, '%')
                )
            </if>
    </sql>

    <!-- 鄂尔多斯班级查询sql -->
    <sql id="erdosClazzSql">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            t_activity t
        INNER JOIN
            t_activity_class t1 ON t.id = t1.activity_id
            AND t1.class_id = #{params.userClassId}
        <include refid="classifyJoinConditionSql"></include>
        <include refid="erdosConditionSql"></include>
        GROUP BY t.id
    </sql>

    <!-- 鄂尔多斯区域查询sql -->
    <sql id="erdosRegionSql">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            t_activity t
        INNER JOIN t_activity_scope t1 ON t.id = t1.activity_id
        <if test="params.fids != null and params.fids.size() != 0">
            AND t1.fid IN
            <foreach collection="params.fids" index="key" item="value" open="(" close=")" separator=",">
                #{value}
            </foreach>
        </if>
        <include refid="classifyJoinConditionSql"></include>
        <include refid="erdosConditionSql"></include>
        GROUP BY t.id
    </sql>

    <select id="pageErdosParticipate" resultMap="BaseResultMap">
        SELECT
            *
        FROM
        (
             <if test="params.levelType == null || params.levelType == ''">
                <if test="params.userClassId != null">
                    <include refid="erdosClazzSql"></include>
                    UNION
                </if>
                 <include refid="erdosRegionSql"></include>
             </if>
            <if test="params.levelType == 'class'">
                <include refid="erdosClazzSql"></include>
            </if>
            <if test="params.levelType == 'school' || params.levelType == 'region'">
                <include refid="erdosRegionSql"></include>
            </if>
        ) t
        WHERE
            ISNULL(t.origin_activity_id)
        GROUP BY t.id
        ORDER BY
            FIELD( t.`status`, 2, 3, 4 ),
        <if test="params.topFid != null">
            t.create_fid <![CDATA[<>]]> #{params.topFid},
        </if>
        CASE WHEN t.`status` = 2 THEN t.start_time END ASC,
        CASE WHEN t.`status` = 3 OR t.`status` = 4 THEN t.start_time END DESC
        </select>

    <select id="erdosMhDatacenterPage" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM t_activity t
        INNER JOIN t_activity_scope t1 ON t.id = t1.activity_id
        <if test="params.fids != null and params.fids.size() != 0">
            AND t1.fid IN
            <foreach collection="params.fids" index="key" item="value" open="(" close=")" separator=",">
                #{value}
            </foreach>
        </if>
        <include refid="classifyJoinConditionSql"></include>
        WHERE
            t.is_open_work = 0
            <choose>
                <when test="params.status != null">
                    AND t.`status` = #{params.status}
                </when>
                <otherwise>
                    <choose>
                        <when test="params.statusList != null and params.statusList.size() != 0">
                            AND t.`status` IN
                            <foreach collection="params.statusList" index="key" item="value" open="(" close=")" separator=",">
                                #{value}
                            </foreach>
                        </when>
                        <otherwise>
                            AND t.`status` IN ( 2, 3, 4 )
                        </otherwise>
                    </choose>

                </otherwise>
            </choose>
            <if test="params.flag != null and params.flag != ''">
                AND t.activity_flag = #{params.flag}
            </if>
            <if test="params.sw != null and params.sw != ''">
                AND (
                t.`name` LIKE CONCAT('%', #{params.sw}, '%')
                OR t.organisers LIKE CONCAT('%', #{params.sw}, '%')
                )
            </if>

    </select>
    <!--查询管理的活动-->
    <select id="pageManaging" resultMap="BaseResultMap">
        SELECT
            <choose>
                <when test="params.marketId != null">
                    <include refid="Base_Market_Column_List"></include>,
                    t.start_time as startTime, t.end_Time as endTime,
                    t1.is_released,
                    t1.status,
                    t1.is_top top
                </when>
                <otherwise>
                    <include refid="Base_Column_List"></include>,
                    t.start_time as startTime, t.end_Time as endTime
                </otherwise>
            </choose>
            , t2.name activityClassifyName
        FROM
            t_activity t
            <if test="params.marketId != null">
                INNER JOIN t_activity_market t1 ON t1.activity_id = t.id
            </if>
            LEFT JOIN t_classify t2 ON t.activity_classify_id = t2.id
            <if test="params.customFilterMap != null">
                <foreach collection="params.customFilterMap" index="key" item="value" open="" close="" separator="">
                    <if test="value != null and value != ''">
                        INNER JOIN t_activity_component_value t${key} ON t${key}.component_id = #{key} AND t${key}.activity_id = t.id AND t${key}.`value` = #{value}
                    </if>
                </foreach>
            </if>
        WHERE
        <choose>
            <when test="params.marketId != null">
                t1.market_id = #{params.marketId}
            </when>
            <otherwise>
            (
                (
                    t.create_fid IN
                    <foreach collection="params.fids" index="key" item="value" open="(" close=")" separator=",">
                        #{value}
                    </foreach>
                    AND t.is_released = 1
                )
                OR t.create_fid = #{params.topFid}
            )
            </otherwise>
        </choose>
        <choose>
            <when test="params.status != null">
                AND t.`status` = #{params.status}
            </when>
            <otherwise>
                AND t.`status` > 0
            </otherwise>
        </choose>
        <if test="params.activityClassifyId != null">
            AND t.activity_classify_id = #{params.activityClassifyId}
        </if>
        <if test="params.sw != null and params.sw != ''">
            AND (
                t.name LIKE CONCAT('%', #{params.sw} , '%')
                OR t.create_user_name LIKE CONCAT('%', #{params.sw} , '%')
                OR t.create_org_name LIKE CONCAT('%', #{params.sw} , '%')
            )
        </if>
        GROUP BY
            t.id
        ORDER BY
        <trim suffixOverrides=",">
            <if test="params.marketId != null">
                t1.is_top DESC,
            </if>
            <if test="params.orderField != null and params.orderField != ''">
                ${params.orderField} ${params.orderType},
            </if>
            <if test="params.orderField == null or params.orderField == ''">
                t.create_time DESC,
            </if>
            <if test="params.marketId == null">
                t.create_fid <![CDATA[<>]]> #{params.topFid},
            </if>
        </trim>
    </select>

    <!--查询创建的活动-->
    <select id="pageCreated" resultMap="BaseResultMap">
        SELECT
            <choose>
                <when test="params.marketId != null">
                    <include refid="Base_Market_Column_List"></include>,
                    t.start_time as startTime, t.end_Time as endTime,
