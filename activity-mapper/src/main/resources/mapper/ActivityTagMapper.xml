<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoxing.activity.mapper.ActivityTagMapper">
    <resultMap id="BaseResultMap" type="com.chaoxing.activity.model.ActivityTag">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="activity_id" jdbcType="INTEGER" property="activityId" />
        <result column="tag_id" jdbcType="INTEGER" property="tagId" />
    </resultMap>
    <sql id="Base_Column_List">
        t.id, t.activity_id, t.tag_id
    </sql>

    <insert id="batchAdd">
        INSERT INTO t_activity_tag ( activity_id, tag_id )
        VALUES
            <foreach collection="activityTags" index="key" item="value" open="" close="" separator=",">
                ( #{value.activityId}, #{value.tagId} )
            </foreach>
    </insert>

</mapper>