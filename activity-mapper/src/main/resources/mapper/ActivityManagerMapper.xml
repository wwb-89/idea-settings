<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoxing.activity.mapper.ActivityManagerMapper">
    <resultMap id="BaseResultMap" type="com.chaoxing.activity.model.ActivityManager">
        <result column="activity_id" jdbcType="INTEGER" property="activityId" />
        <result column="uid" jdbcType="INTEGER" property="uid" />
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="create_uid" jdbcType="INTEGER" property="createUid" />
    </resultMap>
    <sql id="Base_Column_List">
        t.activity_id, t.uid, t.user_name, t.create_time, t.create_uid
    </sql>

    <select id="paging" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            t_activity_manager t
        WHERE
            t.activity_id = #{activityId}
        ORDER BY
            t.create_time ASC
    </select>

    <insert id="batchAdd">
        INSERT INTO t_activity_manager ( activity_id, uid, user_name, create_uid )
        VALUES
            <foreach collection="activityManagers" index="key" item="value" open="" close="" separator=",">
                (
                    #{value.activityId},
                    #{value.uid},
                    #{value.userName},
                    #{value.createUid}
                )
            </foreach>
    </insert>

</mapper>