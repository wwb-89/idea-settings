<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoxing.activity.mapper.MarketClassifyMapper">
    <resultMap id="BaseResultMap" type="com.chaoxing.activity.model.MarketClassify">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="market_id" jdbcType="INTEGER" property="marketId" />
        <result column="classify_id" jdbcType="INTEGER" property="classifyId" />
        <result column="sequence" jdbcType="INTEGER" property="sequence" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>
    <sql id="Base_Column_List">
        t.id, t.market_id, t.classify_id, t.sequence, t.create_time, t.update_time
    </sql>

    <select id="getMaxSequenceByMarketId" resultType="java.lang.Integer">
        SELECT
            CASE WHEN ISNULL(MAX( t.sequence )) THEN 1 ELSE MAX( t.sequence ) + 1 END
        FROM
            t_market_classify t
        WHERE
            t.market_id = #{marketId}
    </select>

    <update id="sort">
        UPDATE t_market_classify t
        SET t.sequence =
            <foreach collection="classifyIdSequenceMap" index="key" item="value" open="(CASE t.classify_id" close=" END)" separator=" ">
                WHEN #{key} THEN #{value}
            </foreach>
        WHERE
            t.market_id = #{marketId}
            AND t.classify_id IN
                <foreach collection="classifyIdSequenceMap" index="key" item="value" open="(" close=")" separator=",">
                    #{key}
                </foreach>
    </update>

</mapper>