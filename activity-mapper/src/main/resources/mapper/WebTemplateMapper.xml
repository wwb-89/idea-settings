<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoxing.activity.mapper.WebTemplateMapper">
    <resultMap id="BaseResultMap" type="com.chaoxing.activity.model.WebTemplate">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="cover_url" jdbcType="VARCHAR" property="coverUrl" />
        <result column="preview_url" jdbcType="VARCHAR" property="previewUrl" />
        <result column="origin_page_id" jdbcType="VARCHAR" property="originPageId" />
        <result column="is_system" jdbcType="VARCHAR" property="system" />
        <result column="affiliation_area_code" jdbcType="VARCHAR" property="affiliationAreaCode" />
        <result column="affiliation_fid" jdbcType="VARCHAR" property="affiliationFid" />
        <result column="sequence" jdbcType="VARCHAR" property="sequence" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>
    <sql id="Base_Column_List">
        t.id, t.name, t.cover_url, t.preview_url, t.origin_page_id, t.is_system, t.affiliation_area_code, t.affiliation_fid, t.sequence, t.create_time
    </sql>

    <select id="listAffiliation" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            t_web_template t
        WHERE
            t.is_system = 0
            AND (
                <if test="codes != null and codes.size() != 0">
                    t.affiliation_area_code IN
                    <foreach collection="codes" index="key" item="value" open="(" close=")" separator=",">
                        #{value}
                    </foreach>
                    OR
                </if>
                t.affiliation_fid = #{fid}
            )
        ORDER BY
            t.sequence
    </select>

</mapper>