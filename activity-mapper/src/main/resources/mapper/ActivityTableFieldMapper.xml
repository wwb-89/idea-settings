<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoxing.activity.mapper.ActivityTableFieldMapper">
    <resultMap id="BaseResultMap" type="com.chaoxing.activity.model.ActivityTableField">
        <result column="activity_id" jdbcType="INTEGER" property="activityId" />
        <result column="table_field_id" jdbcType="INTEGER" property="tableFieldId" />
        <result column="table_field_detail_id" jdbcType="INTEGER" property="tableFieldDetailId" />
        <result column="is_top" jdbcType="BIT" property="top" />
        <result column="sequence" jdbcType="INTEGER" property="sequence" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="create_uid" jdbcType="INTEGER" property="createUid" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
        <result column="update_uid" jdbcType="INTEGER" property="updateUid" />
    </resultMap>
    <sql id="Base_Column_List">
        t.activity_id, t.table_field_id, t.table_field_detail_id, t.is_top, t.sequence, t.create_time, t.create_uid, t.update_time, t.update_uid
    </sql>
    <insert id="batchAdd">
        INSERT INTO t_activity_table_field ( activity_id, table_field_id, table_field_detail_id, is_top, sequence, create_uid, update_uid )
        VALUES
        <foreach collection="activityTableFields" index="key" item="value" open="" close="" separator=",">
            (
            #{value.activityId},
            #{value.tableFieldId},
            #{value.tableFieldDetailId},
            #{value.top},
            #{value.sequence},
            #{value.createUid},
            #{value.updateUid}
            )
        </foreach>
    </insert>
</mapper>