<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoxing.activity.mapper.UserStatSummaryMapper">
    <resultMap id="BaseResultMap" type="com.chaoxing.activity.model.UserStatSummary">
        <result column="uid" jdbcType="INTEGER" property="uid" />
        <result column="uname" jdbcType="VARCHAR" property="uname" />
        <result column="real_name" jdbcType="VARCHAR" property="realName" />
        <result column="mobile" jdbcType="VARCHAR" property="mobile" />
        <result column="participate_activity_num" jdbcType="INTEGER" property="participateActivityNum" />
        <result column="signed_in_num" jdbcType="INTEGER" property="signedInNum" />
        <result column="signed_in_rate" jdbcType="DECIMAL" property="signedInRate" />
        <result column="rating_num" jdbcType="INTEGER" property="ratingNum" />
        <result column="qualified_num" jdbcType="INTEGER" property="qualifiedNum" />
        <result column="total_participate_time_length" jdbcType="INTEGER" property="totalParticipateTimeLength" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>
    <sql id="Base_Column_List">
        t.uid, t.uname, t.real_name, t.mobile, t.participate_activity_num, t.signed_in_num, t.signed_in_rate, t.rating_num, t.qualified_num, t.total_participate_time_length, t.create_time, t.update_time
    </sql>
    <select id="paging" resultType="com.chaoxing.activity.model.UserStatSummary">
        SELECT
            t.uid uid,
            t.uname uname,
            t.real_name,
            t.mobile mobile,
            t.participate_activity_num participateActivityNum,
            t.signed_in_num signedInNum,
            t.signed_in_rate signedInRate,
            t.rating_num ratingNum,
            t.qualified_num qualifiedNum,
            t.total_participate_time_length totalParticipateTimeLength,
            t.create_time createTime,
            t.update_time updateTime
        FROM
            t_user_stat_summary t
        WHERE
            t.uid IN
            <foreach collection="userStatSummaryQuery.uids" index="key" item="value" open="(" close=")" separator=",">
                #{value}
            </foreach>
            <if test="userStatSummaryQuery.realName != null and userStatSummaryQuery.realName != ''">
                AND t.real_name LIKE CONCAT('%', #{userStatSummaryQuery.realName}, '%')
            </if>
        <if test="userStatSummaryQuery.orderField != null and userStatSummaryQuery.orderField != ''">
            ORDER BY
                ${userStatSummaryQuery.orderField} ${userStatSummaryQuery.orderType}
        </if>
    </select>
</mapper>