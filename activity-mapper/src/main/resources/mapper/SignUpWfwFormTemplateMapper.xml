<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaoxing.activity.mapper.SignUpWfwFormTemplateMapper">
    <resultMap id="BaseResultMap" type="com.chaoxing.activity.model.SignUpWfwFormTemplate">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="type" jdbcType="VARCHAR" property="type" />
        <result column="code" jdbcType="VARCHAR" property="code" />
        <result column="sign" jdbcType="VARCHAR" property="sign" />
        <result column="key" jdbcType="VARCHAR" property="key" />
        <result column="form_id" jdbcType="INTEGER" property="formId" />
        <result column="open_addr" jdbcType="VARCHAR" property="openAddr" />
        <result column="pc_url" jdbcType="VARCHAR" property="pcUrl" />
        <result column="wechat_url" jdbcType="VARCHAR" property="wechatUrl" />
        <result column="fid" jdbcType="INTEGER" property="fid" />
        <result column="market_id" jdbcType="INTEGER" property="marketId" />
        <result column="sequence" jdbcType="INTEGER" property="sequence" />
        <result column="is_system" jdbcType="BIT" property="system" />
        <result column="is_enable" jdbcType="BIT" property="enable" />
        <result column="is_deleted" jdbcType="BIT" property="deleted" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>
    <sql id="Base_Column_List">
        t.id, t.name, t.type, t.code, t.sign, t.key, t.form_id, t.open_addr, t.pc_url, t.wechat_url, t.fid, t.market_id,
        t.sequence, t.is_system, t.is_enable, t.is_deleted, t.create_time, t.update_time
    </sql>

    <select id="getMarketMaxSequence" resultType="java.lang.Integer">
        SELECT
            CASE WHEN MAX( t.sequence ) IS NULL THEN 0 ELSE MAX( t.sequence ) END
        FROM
            t_sign_up_wfw_form_template t
        WHERE
            t.market_id = #{marketId}
            AND t.is_system = 0
    </select>

    <update id="sort">
        UPDATE t_sign_up_wfw_form_template t
        SET t.sequence =
            <foreach collection="sortIdMap" index="key" item="value" open="CASE t.id " close=" END" separator=" ">
                WHEN #{key} THEN #{value}
            </foreach>
        WHERE t.id IN
            <foreach collection="sortIdMap" index="key" item="value" open="(" close=")" separator=",">
                #{key}
            </foreach>
    </update>

</mapper>